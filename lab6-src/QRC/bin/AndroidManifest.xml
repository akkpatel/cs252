<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs252L6.qrcode"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cs252L6.qrcode.ActivityMain"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs252L6.qrcode.DisplayMessageActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.cs252L6.qrcode.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs252L6.qrcode.ActivityMain" />
        </activity>
        <activity
            android:name="com.cs252L6.qrcode.GenerationMode"
            android:label="@string/app_name"
            android:parentActivityName="com.cs252L6.qrcode.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs252L6.qrcode.ActivityMain" />
        </activity>
        <activity
            android:name="com.cs252L6.qrcode.SelectText"
            android:label="@string/app_name"
            android:parentActivityName="com.cs252L6.qrcode.GenerationMode" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs252L6.qrcode.GenerationMode" />
        </activity>
        <activity
            android:name="com.cs252L6.qrcode.InfoPage"
            android:label="@string/app_name"
            android:parentActivityName="com.cs252L6.qrcode.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs252L6.qrcode.ActivityMain" />
        </activity>
        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Scan Barcode"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs252L6.qrcode.ScanActivity"
            android:label="@string/title_activity_scan" >
        </activity>
        <activity
            android:name="com.cs252L6.qrcode.Bitmap"
            android:label="@string/title_activity_bitmap" >
        </activity>
    </application>

</manifest>